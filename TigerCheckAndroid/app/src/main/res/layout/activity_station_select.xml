<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StationSelect" >

    <!-- Checkbox Layout -->

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="Enter Different Barcode"
        android:textSize="24sp"
        android:id="@+id/newPatientButton"
        android:onClick="onStationSelected" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="65dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blood Pressure"
            android:id="@+id/bloodPressureButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:onClick="onStationSelected" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Respiration Rate"
            android:id="@+id/respirationRateButton"
            android:layout_alignTop="@+id/bloodPressureButton"
            android:layout_toRightOf="@+id/bloodPressureButton"
            android:layout_weight="1"
            android:onClick="onStationSelected" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Height/Weight"
            android:id="@+id/heightWeightButton"
            android:layout_alignTop="@+id/respirationRateButton"
            android:layout_toRightOf="@+id/respirationRateButton"
            android:layout_weight="1"
            android:onClick="onStationSelected" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blood Sugar"
            android:id="@+id/bloodSugarButton"
            android:layout_alignTop="@+id/heightWeightButton"
            android:layout_toRightOf="@+id/heightWeightButton"
            android:layout_weight="1"
            android:onClick="onStationSelected" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Temperature"
            android:id="@+id/temperatureButton"
            android:layout_toRightOf="@+id/bloodSugarButton"
            android:layout_weight="1"
            android:onClick="onStationSelected" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cholesterol"
            android:id="@+id/cholesterolButton"
            android:layout_above="@+id/earsButton"
            android:layout_toLeftOf="@+id/visionButton"
            android:layout_weight="1"
            android:onClick="onStationSelected" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Heart Rate"
            android:id="@+id/heartRateButton"
            android:layout_alignTop="@+id/cholesterolButton"
            android:layout_toRightOf="@+id/cholesterolButton"
            android:layout_weight="1"
            android:onClick="onStationSelected" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scoliosis"
            android:id="@+id/scoliosisButton"
            android:layout_alignTop="@+id/heartRateButton"
            android:layout_toRightOf="@+id/heartRateButton"
            android:layout_weight="1"
            android:onClick="onStationSelected" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lungs"
            android:id="@+id/lungsButton"
            android:layout_alignTop="@+id/scoliosisButton"
            android:layout_toRightOf="@+id/scoliosisButton"
            android:layout_weight="1"
            android:onClick="onStationSelected" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dental"
            android:id="@+id/dentalButton"
            android:layout_alignTop="@+id/lungsButton"
            android:layout_toRightOf="@+id/lungsButton"
            android:layout_weight="1"
            android:onClick="onStationSelected" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:id="@+id/linearLayout3">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nose"
            android:id="@+id/noseButton"
            android:layout_alignTop="@+id/throatButton"
            android:layout_toRightOf="@+id/throatButton"
            android:layout_weight="1"
            android:onClick="onStationSelected" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vision"
            android:id="@+id/visionButton"
            android:layout_alignTop="@+id/heartButton"
            android:layout_toRightOf="@+id/heartButton"
            android:layout_weight="1"
            android:onClick="onStationSelected" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ears"
            android:id="@+id/earsButton"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:maxWidth="15dp"
            android:layout_weight="1"
            android:onClick="onStationSelected" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Heart"
            android:id="@+id/heartButton"
            android:layout_alignTop="@+id/earsButton"
            android:layout_toRightOf="@+id/earsButton"
            android:layout_weight="1"
            android:onClick="onStationSelected" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Throat"
            android:id="@+id/throatButton"
            android:layout_alignTop="@+id/visionButton"
            android:layout_toRightOf="@+id/visionButton"
            android:layout_weight="1"
            android:onClick="onStationSelected" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select Station You Wish To Collect Data For"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="35dp" />


</RelativeLayout>