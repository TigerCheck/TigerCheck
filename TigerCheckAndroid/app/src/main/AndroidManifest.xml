<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tigercheck.android.app" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:screenOrientation="landscape"
            android:name="com.tigercheck.android.app.WelcomeScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="landscape"
            android:name="com.tigercheck.android.app.StationSelect"
            android:label="@string/title_activity_station_select" >
        </activity>
        <activity
            android:screenOrientation="landscape"
            android:name="com.tigercheck.android.app.MainStation"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
